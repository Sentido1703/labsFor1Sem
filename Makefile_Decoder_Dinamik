SOURCES=decoder.c
FORLIBRARY=stringutils.o coders.o
LIBRARY=libs.so
TARGET=decoded

all: $(TARGET)

$(TARGET): decoder.o libs.so
	gcc decoder.o -o $(TARGET) -std=c99 -L. -lCod -Wl,-rpath,.

decoder.o: decoder.c
	gcc $< -c -o $@ -std=c99

$(LIBRARY): $(FORLIBRARY)
	gcc stringutils.o coders.o -shared -o $(LIBRARY)

stringutils.o: stringutils.c
	gcc -c -fPIC $< -std=c99

coders.o: coders.c
	gcc -c -fPIC $< -std=c99

clean:
	rm -f *.o *.so $(TARGET)